@model IEnumerable<DiabetesHelper.DAL.Models.GlucoseReading>

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">📊 سجل قراءات الجلوكوز</h4>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">القيمة (mg/dL)</th>
                            <th scope="col">التاريخ</th>
                            <th scope="col">نوع القراءة</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="4" class="text-center py-4">لا توجد قراءات حتى الآن.</td>
                            </tr>
                        }
                        else
                        {
                            var index = 0;
                            foreach (var r in Model.OrderByDescending(r => r.Date))
                            {
                                index++;
                                <tr>
                                    <th scope="row">@index</th>
                                    <td>@r.Value</td>
                                    <td>@r.Date.ToString("dd MMM yyyy - hh:mm tt")</td>
                                    <td>@r.ReadingType.ToString()</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
